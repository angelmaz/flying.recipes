[Unit]
Description=Kitchen Helper
After=network.target

[Service]
User=ubuntu
Group=ubuntu
Environment="LANG=en_US.UTF-8"
Environment="LANGUAGE=en_US.UTF-8:"
WorkingDirectory=/home/ubuntu/kitchen_helper/
ExecStart=/bin/bash -c "source kh/bin/activate\
&& python3 server.py &>> flask.log"
Restart=always

[Install]
WantedBy=multi-user.target
